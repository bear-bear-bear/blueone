{
  "name": "blueone",
  "private": true,
  "description": "",
  "engines": {
    "node": ">=16.15.0",
    "npm": ">=8.5.0"
  },
  "scripts": {
    "prepare": "husky install",
    "lint:staged": "lint-staged",
    "lint": "npm run lint:front && npm run lint:back && npm run prettier",
    "lint:front": "eslint packages/blueone-front/src/ --fix --ext .ts,.tsx",
    "lint:back": "eslint packages/blueone-back/src/ --fix --ext .ts",
    "prettier": "prettier --parser babel-ts --write \"packages/**/*.{ts,tsx}\"",
    "postinstall": "npm run bootstrap",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean --yes",
    "audit": "lerna-audit",
    "build:front": "lerna run build --stream --scope=blueone-front",
    "build:back": "lerna run build --stream --scope=blueone-back",
    "start:back": "lerna run start --stream --scope=blueone-back",
    "exit:back": "lerna run exit --stream --scope=blueone-back",
    "restart:back": "lerna run restart --stream --scope=blueone-back",
    "dev": "lerna run dev --parallel --scope=blueone-*",
    "db:create": "lerna run db:create --parallel --scope=blueone-back",
    "db:migrate": "lerna run db:migrate --parallel --scope=blueone-back"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bear-bear-bear/blueone.git"
  },
  "author": "BLUEONE <ghlwkdthfl@gmail.com>",
  "homepage": "https://blueone.vercel.app",
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^16.11.22",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^7.0.1",
    "lerna-audit": "^1.3.3",
    "lint-staged": "^12.1.4",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "lerna": "^5.5.2",
    "ncp": "^2.0.0"
  }
}
