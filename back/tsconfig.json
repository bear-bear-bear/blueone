{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "typeRoots" : [
      "./node_modules/@types",
      "./typings"
    ],
    "baseUrl": "src",
    "paths": {
      "@/*":  ["./*"],
      "typings": ["../typings"]
    }
  },
  "include": [
    "typings/**/*.d.ts",
    "src/**/*"
  ]
}
