{
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es2017",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "@config/*":  ["config/*"],
      "@models/*": ["models/*"],
    }
  },
  "include": [
    "src/**/*"
  ]
}
